@model IList<PurchaseProductViewModel>

<form method="post">    
    <fieldset>
        <h4 class="modal-title" id="gridSystemModalLabel">Add Products</h4>
        <table id="clientTable" class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <td>Type</td>
                    <td>Size</td>
                    <td>Grade</td>
                    <td>Pieces</td>
                    <td>Quantity</td>
                    <td>Price</td>
                    <td>Transport Cost</td>
                    <td>Terminal Charges</td>
                    <td>Duty</td>
                    <td>Customs Expenses</td>
                    <td>Bank Expenses</td>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                <div class="editor-field">
                                    <select name="Description[0]" id="Description" asp-for="@product.Description" >
                                        <option value="">All</option>
                                        @foreach (var type in product.Descriptions)
                                        {
                                            <option value="@type">@type</option>
                                        }
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    <select name="Size[0]" id="Size" asp-for="@product.Size">
                                        <option value="">All</option>
                                        @foreach (var size in product.Sizes)
                                        {
                                            <option value="@size">@size</option>
                                        }
                                    </select>
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    <select name="Grade[0]" id="Grade" asp-for="@product.Grade">
                                        <option value="">All</option>
                                        @foreach (var grade in product.Grades)
                                        {
                                            <option value="@grade">@grade</option>
                                        }
                                    </select>
                                </div>
                            </td>
                            <td class="col-sm-1">
                                <div class="editor-field">
                                    <input asp-for="@product.ProductSpecificationFormModel.Pieces" id="Pieces" class="text-box single-line" name="Pieces[0]" value="" required="required">
                                </div>
                            </td>
                            <td class="col-sm-1">
                                <div class="editor-field">
                                    <input asp-for="@product.ProductSpecificationFormModel.Cubic" id="Cubic" class="text-box single-line" name="Cubic[0]" value="" required="required">
                                </div>
                            </td>
                            <td class="col-sm-1">
                                <div class="editor-field">

                                    <input asp-for="@product.ProductSpecificationFormModel.Price" id="Price" class="text-box single-line" name="Price[0]" value="" required="required">
                                </div>
                            </td>
                            <td class="col-sm-1">
                                <div class="editor-field">
                                    <input asp-for="@product.ProductSpecificationFormModel.TransportCost" id="TransportCost" class="text-box single-line" name="TransportCost[0]" value="" required="required">
                                </div>
                            </td>
                            <td class="col-md-1">
                                <div class="editor-field">
                                    <input asp-for="@product.ProductSpecificationFormModel.TerminalCharges" id="TerminalCharges" type="text" class="text-box single-line" name="TerminalCharges[0]" value="" required="required">
                                </div>
                            </td>
                            <td class="col-sm-3">
                                <div class="editor-field">
                                    <input asp-for="@product.ProductSpecificationFormModel.Duty" id="Duty" class="text-box single-line" name="Duty[0]" value="" required="required">
                                </div>
                            </td>
                            <td class="col">
                                <div class="editor-field">

                                    <input asp-for="@product.ProductSpecificationFormModel.CustomsExpenses" id="CustomsExpenses" type="text" class="text-box single-line" name="CustomsExpenses[0]" value="" required="required">
                                </div>
                            </td>
                            <td class="col">
                                <div class="editor-field">

                                    <input asp-for="@product.ProductSpecificationFormModel.BankExpenses" id="BankExpenses" class="text-box single-line" name="BankExpenses[0]" value="" required="required">
                                </div>
                            </td>
                            <td>
                                <button type="button" class="btn btn-primary" onclick="removeTr(0);">Delete</button>
                            </td>
                        </tr>
                    }

                }

            </tbody>                
            
        </table>
        <p>
            <button id="addButton" type="button" class="btn btn-primary">Add Product</button>
        </p>
        <hr />
        <p>
            <button type="submit" class="btn btn-primary">Save</button>
        </p>
      
    </fieldset>
</form>
@section Scripts {

    <script type="text/javascript">
            var counter = 1;
            $(function () {
                $('#addButton').click(function (e) {
                    e.preventDefault();
                    $("#clientTable").append('<tr id="tablerow' + counter + '"><td>' +
                        ' <select name="Description[counter]" asp-for="Description" id="Description '+counter+'"><option value="">All</option>@foreach (var pro in Model)
                        {
                            foreach (var type in pro.Descriptions)
                            {
                                {<option value="@type">@type</option>}
                            }
                        } </select>' +
                        '</td>' +
                        '<td>' +
                    '<select name="Size[counter]" asp-for="Size" id="Size '+counter +'"><option value="">All</option>@foreach (var item in Model)
                        {
                            foreach (var size in item.Sizes)
                            {
                                {<option value="@size">@size</option>}
                            }
                        } </select>' +
                        '</td>' +
                        '<td>' +
                    '<select name="Grade[counter]" asp-for="Grade" id="Grade '+counter +'"><option value="">All</option>@foreach (var item in Model)
                        {
                            foreach (var grade in item.Grades)
                            {
                                {<option value="@grade">@grade</option>}
                            } } </select>' +
                        '</td>' +
                        '<td>' +
                    '<input class="text-box single-line" name="Pieces[counter]" value="" required="required" id="Pieces '+counter +'"/>' +
                        '</td>' +
                        '<td>' +
                        '<input class="text-box single-line" name="Cubic[counter]" value="" required="required" id="Cubic ' + counter +'"/>' +
                        '</td>' +
                        '<td>' +
                        '<input class="text-box single-line" name="Price[counter]" value="" required="required" id="Price ' + counter +'"/>' +
                        '</td>' +
                        '<td>' +
                        '<input  class="text-box single-line" name="TransportCost[counter]" value="" required="required" id="TransportCost ' + counter +'"/>' +
                        '</td>' +
                        '<td>' +
                        '<input  class="text-box single-line" name="TerminalCharges[counter]" value="" required="required" id="TerminalCharges ' + counter +'"/>' +
                        '</td>' +
                        '<td>' +
                        '<input class="text-box single-line" name="Duty[counter]" value="" required="required" id="Duty ' + counter +'"/>' +
                        '</td>' +
                        '<td>' +
                        '<input class="text-box single-line" name="CustomsExpenses[counter]" value="" required="required" id="CustomsExpenses ' + counter +'"/>' +
                        '</td>' +
                        '<td>' +
                        '<input class="text-box single-line" name="BankExpenses[counter]" value="" required="required" id="BankExpenses ' + counter +'"/>' +
                        '</td>' +
                        '<td>' +
                        '<button type="button" class="btn btn-primary" onclick="removeTr(' + counter + ');">Delete</button>' +
                        '</td>' +
                        '</tr>');
                    counter++;
                    return false;
                });
            });

            function removeTr(index) {
                if (counter > 1) {
                    $('#tablerow' + index).remove();
                    counter--;
                }
                return false;
            }
    </script>
}