@model DocumentFormModel


<div class="container" ng-controller="DocumentsController">
    <div class="card">
        <input type="hidden" id="Number" value="@ViewBag.Number" />
        Order
        <strong>@ViewBag.InvoiceNum</strong>
        <span class="float-right"> <a class="btn btn-success" ng-click="SaveInvoice()">Save</a></span>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-sm-6">
                <div>@Model.Seller.Name</div>
                <div>@Model.Seller.EIK</div>
                <div>@Model.Seller.VAT</div>
                <div>@Model.Seller.Country</div>
                <div>@Model.Seller.City</div>
                <div>@Model.Seller.Street</div>
            </div>
            <div class="col-sm-6">
                <div class="float-right">
                    <div>
                        <label asp-for="Customer">Customer</label>
                        <select asp-for="Customer">
                            <option value="">Choose Customer</option>
                            @foreach (var customer in Model.Customers)
                            {
                                <option value="@customer">@customer</option>
                            }
                        </select>
                    </div>
                    @*<div>@Model.Document.Client.EIK</div>
                    <div>@Model.Document.Client.VAT</div>
                    <div>@Model.Document.Client.Country</div>
                    <div>@Model.Document.Client.City</div>
                    <div>@Model.Document.Client.Street</div>*@
                </div>
            </div>
        </div>

        <div class="table-responsive-sm">
            <table class="table-striped">
                <thead>
                    <tr>
                        <th class="center">#</th>
                        <th>Description</th>
                        <th>Size</th>
                        <th>Grade</th>
                        <th>Unit Cost</th>
                        <th class="center">Quantity</th>
                        <th class="right">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr id="tablerow0">
                        <td>
                            <div class="editor-field">
                                <select name="ProductDescription[0]" asp-for="Document.Products.Select(a=>a.ProductDescription)">
                                    <option value="">All</option>
                                    @foreach (var type in Model.Document.Products)
                                    {
                                        <option value="@type.ProductDescription">@type.ProductDescription</option>
                                    }
                                </select>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                <select name="Size[0]" asp-for="Document.Products.Select(a=>a.Size)">
                                    <option value="">All</option>
                                    @foreach (var size in Model.Document.Products)
                                    {
                                        <option value="@size.Size">@size.Size</option>
                                    }
                                </select>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                <select name="Grade[0]" asp-for="Document.Products.Select(a=>a.Grade)">
                                    <option value="">All</option>
                                    @foreach (var grade in Model.Document.Products)
                                    {
                                        <option value="@grade.Grade">@grade.Grade</option>
                                    }
                                </select>
                            </div>
                        </td>

                        <td>
                            <div class="editor-field">
                                <input asp-for="Document.Products.Select(a=>a.SoldPrice)" class="text-box single-line" name="SoldPrice[0]" value="" required="required">
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                <input asp-for="Document.Products.Select(a=>a.Cubic)" class="text-box single-line" name="Cubic[0]" value="" required="required">
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                <input asp-for="SubTotal" class="text-box single-line" name="SubTotal[0]" value="@Model.Document.Products.Select(a=>a.SoldPrice)*@Model.Document.Products.Select(a=>a.Cubic)" required="required">
                            </div>
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary" onclick="removeTr(0);">Delete</button>
                        </td>
                    <tr>
                        <p>
                            <button id="addButton" type="submit" class="btn btn-primary">Add</button>
                        </p>
                        @*<td>
            <a href="#" ng-click="AddNewRow()"><i class="fa fa-plus"></i></a>
        </td>*@
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col-lg-4 col-sm-5">

            </div>

            <div class="col-lg-4 col-sm-5 ml-auto">
                <table class="table table-clear">
                    <tbody>
                        <tr>
                            <td class="left">
                                <strong>Subtotal</strong>
                            </td>
                            <td class="right">@Model.SubTotal</td>
                        </tr>
                        <tr>
                            <td class="left">
                                <strong>
                                    VAT
                                    <select name="VatParcent" asp-for="VatParcent">
                                        <option value="">--Select--</option>
                                        <option value="0">0%</option>
                                        <option value="20">20%</option>
                                    </select>
                                </strong>
                            </td>
                            <td class="right">@Model.VatParcent</td>
                        </tr>
                        <tr>
                            <td class="left">
                                <strong>Total</strong>
                            </td>
                            <td class="right">
                                <strong>@Model.Total</strong>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script type="text/javascript">
            var counter = 1;
            $(function () {
                $('#addButton').click(function () {
                    $('<tr id="tablerow' + counter + '"><td>' +
                        ' <select name="ProductDescription[' + counter + ']" asp-for="Description" ><option value="">All</option>@foreach (var type in Model.Document.Products){<option value="@type.ProductDescription">@type.ProductDescription</option>}}</select>' +
                        '</td>' +
                        '<td>' +
                        '<select name="Size[' + counter + ']" asp-for="Size" ><option value="">All</option>@foreach (var size in Model.Document.Products){<option value="@size.Size">@size.Size</option>}</select>' +
                        '</td>' +
                        '<td>' +
                        '<select name="Grade[' + counter + ']" asp-for="Grade" ><option value="">All</option>@foreach (var grade in Model.Document.Products){<option value="@grade.Grade">@grade.Grade</option>}</select>' +
                        '</td>' +
                        '<td>' +
                        '<input class="text-box single-line" name="Cubic[' + counter + ']" value="" required="required" />' +
                        '</td>' +
                        '<td>' +
                        '<input class="text-box single-line" name="SoldPrice[' + counter + ']" value="" required="required" />' +
                        '</td>' +
                        '<td>' +
                        '<input  class="text-box single-line" name="SubTotal[' + counter + ']" value="@Model.Document.Products.Select(a=>a.SoldPrice)*@Model.Document.Products.Select(a=>a.Cubic)" required="required" />' +
                        '</td>' ,
                        '</tr>').appendTo('#clientTable');
                    counter++;
                    return false;
                });
            });

            function removeTr(index) {
                if (counter > 1) {
                    $('#tablerow' + index).remove();
                    counter--;
                }
                return false;
            }
    </script>
}