@model AddProductsFormModel

@{ ViewBag.Title = "Add Product";
        }

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-group ">
                <label asp-for="ProductDescription">Description</label>
                <input asp-for="ProductDescription" type="text" class="form-control">
            </div>

            <div class="form-group ">
                <label asp-for="Size">Size</label>
                <input asp-for="Size" type="text" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="Grade">Grade</label>
                <input asp-for="Grade" type="text" class="form-control">
            </div>
            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>

</div>

